<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outputBMI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserInputActivity">

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Height"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/inputHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Weight"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/heightTextView"
        app:layout_constraintStart_toStartOf="@+id/heightTextView"
        app:layout_constraintTop_toBottomOf="@+id/heightTextView" />

    <TextView
        android:id="@+id/showBMITextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/kgView"
        app:layout_constraintStart_toStartOf="@+id/inputWeight"
        app:layout_constraintTop_toTopOf="@+id/bmiTextView" />

    <EditText
        android:id="@+id/inputWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:hint="Enter Weight"
        app:layout_constraintBottom_toBottomOf="@+id/weightTextView"
        app:layout_constraintEnd_toStartOf="@+id/cmTextView"
        app:layout_constraintStart_toStartOf="@+id/inputHeight"
        app:layout_constraintTop_toTopOf="@+id/weightTextView" />

    <EditText
        android:id="@+id/inputHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter Height"
        app:layout_constraintBottom_toBottomOf="@+id/heightTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heightTextView"
        app:layout_constraintTop_toTopOf="@+id/heightTextView" />

    <EditText
        android:id="@+id/inputLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter Level "
        app:layout_constraintBottom_toBottomOf="@+id/levelTextView"
        app:layout_constraintEnd_toEndOf="@+id/showBMITextView"
        app:layout_constraintStart_toStartOf="@+id/showBMITextView"
        app:layout_constraintTop_toTopOf="@+id/levelTextView" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="50dp"
        android:onClick="onSaveClick"
        android:text="Save"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/inputLevel"
        app:layout_constraintStart_toStartOf="@+id/levelTextView"
        app:layout_constraintTop_toBottomOf="@+id/levelTextView" />

    <TextView
        android:id="@+id/bmiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="BMI"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/weightTextView"
        app:layout_constraintStart_toStartOf="@+id/weightTextView"
        app:layout_constraintTop_toBottomOf="@+id/weightTextView" />

    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Level"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/bmiTextView"
        app:layout_constraintStart_toStartOf="@+id/bmiTextView"
        app:layout_constraintTop_toBottomOf="@+id/bmiTextView" />

    <TextView
        android:id="@+id/cmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="cm"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/heightTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inputHeight"
        app:layout_constraintTop_toTopOf="@+id/heightTextView" />

    <TextView
        android:id="@+id/kgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="kg"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/weightTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inputWeight"
        app:layout_constraintTop_toTopOf="@+id/weightTextView" />


</android.support.constraint.ConstraintLayout>